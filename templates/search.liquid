<div class="w-full h-full">
  <div class="h-[20%] bg-gray-100 w-full flex flex-col items-center justify-center space-y-4">
    <h1 class="text-2xl font-semibold tracking-wide">Search result data  <span class="font-light">{{ search.results_count }} products.</span> </h1>
    <form action="{{ routes.search_url }}">
      <input
        class="p-4 h-14 w-96 border-2 border-black rounded bg-none"
        placeholder="Search for product"
        type="text"
        placeholder="Search"
        name="q"
        value="{{ search.terms | escape }}"
      >
      <input
        class="bg-black h-14 p-2 w-40 text-white"
        type="submit"
        value="Search"
      >
    </form>
</div>
{% for item in search.results %}
  {{ item.id }}
{% endfor %}
</div>
